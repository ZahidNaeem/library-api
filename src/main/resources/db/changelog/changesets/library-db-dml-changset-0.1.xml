<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <property name="currentSchema" value="library"/>

  <changeSet author="Zahid Naeem" id="insert-role-admin">
    <preConditions onFail="MARK_RAN">
      <sqlCheck expectedResult="0">SELECT COUNT(*)
                                   FROM ${currentSchema}.roles
                                   WHERE ROLE_NAME =
                                         'ROLE_ADMIN';
      </sqlCheck>
    </preConditions>
    <comment>insert role ADMIN into roles table</comment>
    <insert schemaName="${currentSchema}" tableName="roles">
      <column name="ROLE_ID" value="2224F8516BD64E2DA6C8F4DEE42AAF14"/>
      <column name="ROLE_NAME" value="ROLE_ADMIN"/>
    </insert>
  </changeSet>
  <changeSet author="Zahid Naeem" id="insert-role-user">
    <preConditions onFail="MARK_RAN">
      <sqlCheck expectedResult="0">SELECT COUNT(*)
                                   FROM ${currentSchema}.roles
                                   WHERE ROLE_NAME =
                                         'ROLE_USER';
      </sqlCheck>
    </preConditions>
    <comment>insert role USER into roles table</comment>
    <insert schemaName="${currentSchema}" tableName="roles">
      <column name="ROLE_ID" value="536C1A12686E474EB919758609EDFE9A"/>
      <column name="ROLE_NAME" value="ROLE_USER"/>
    </insert>
  </changeSet>
  <changeSet author="Zahid Naeem" id="insert-user-alabtaal">
    <preConditions onFail="MARK_RAN">
      <sqlCheck expectedResult="0">SELECT COUNT(*)
                                   FROM ${currentSchema}.users
                                   WHERE lower(username) =
                                         'alabtaal';
      </sqlCheck>
    </preConditions>
    <comment>insert user alabtaal</comment>
    <insert schemaName="${currentSchema}" tableName="users">
      <column name="USER_ID" value="0D67157CBEDC4182824055D9AC469FE9"/>
      <column name="NAME" value="Al-Abtaal"/>
      <column name="USERNAME" value="alabtaal"/>
      <column name="EMAIL" value="alabtaal@abc.com"/>
      <column name="PASSWORD" value="$2a$10$kkopzwUFQOI4893r8WRGZ.6lPk43TWnmFKF796fg5MRfftqXeUoE2"/>
      <column name="ACTIVATION_STATUS" value="ACTIVE"/>
    </insert>
  </changeSet>
  <changeSet author="Zahid Naeem" id="insert-role-admin-for-user-alabtaal">
    <preConditions onFail="MARK_RAN">
      <sqlCheck expectedResult="0">SELECT COUNT(*)
                                   FROM ${currentSchema}.user_roles
                                   WHERE user_id =
                                         '0D67157CBEDC4182824055D9AC469FE9'
                                     AND role_id = '2224F8516BD64E2DA6C8F4DEE42AAF14';
      </sqlCheck>
    </preConditions>
    <comment>insert role admin for user alabtaal</comment>
    <insert schemaName="${currentSchema}" tableName="user_roles">
      <column name="USER_ID" value="0D67157CBEDC4182824055D9AC469FE9"/>
      <column name="ROLE_ID" value="2224F8516BD64E2DA6C8F4DEE42AAF14"/>
    </insert>
  </changeSet>
</databaseChangeLog>
